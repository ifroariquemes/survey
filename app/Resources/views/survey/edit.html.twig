{% extends "base.html.twig" %}

{% block content %}
    <h1>Editando enquete</h1>
    {{ form_start(form) }}
    <div class="form_group">
        <div class="col-md-12">
            {{ form_row(form.title, {'attr': {'class': 'form-control', 'autofocus': true} }) }}
        </div>
    </div>
    <div class="form_group">
        <div class="col-md-12">
            {{ form_row(form.description, {'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12" style="margin-top:25px;">
            <p class="text-center">
                <a href="{{ path('dashboard')}}" class="btn btn-danger"><span class="fa fa-times"></span> Cancelar</a>
                <button type="submit" class="btn btn-success">
                    <span class="fa fa-save"></span> Salvar
                </button>
            </p>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}